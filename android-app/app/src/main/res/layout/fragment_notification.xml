<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="120sp"
    android:background="@color/colorPrimary">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TitleTheme"
        android:text="Thanksgiving Notification"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:id="@+id/notificationTitle">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:id="@+id/push_message"
        android:textSize="16sp"
        android:text="Got new notification"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/notificationTitle"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@+id/push_message"
        android:orientation="horizontal"
        android:gravity="center">

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:layout_marginTop="30sp"
        android:layout_marginRight="10sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:id="@+id/interested_btn"
        android:layout_marginBottom="20sp"
        android:text="@string/interested"
        />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginTop="30sp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:id="@+id/not_interested_btn"
            android:layout_marginBottom="20sp"
            android:text="@string/not_interested"/>

    </LinearLayout>
</RelativeLayout>